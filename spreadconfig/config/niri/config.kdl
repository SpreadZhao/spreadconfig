animations {
    off
}

gestures {
    hot-corners {
        off
    }
}

input {
    keyboard {
        numlock
    }

    touchpad {
        tap
        dwt
        natural-scroll
        accel-speed 0.5
    }

}

layout {
    gaps 0
    background-color "#0e1117"
    center-focused-column "never"
    preset-column-widths {
        proportion 0.5
        proportion 1.0
    }
    default-column-width { proportion 0.5; }
    focus-ring {
        width 2
        active-color "#f5e0dc"
        inactive-color "#313244"
    }
    border {
        off
        width 2
        active-color "#f5e0dc"
        inactive-color "#313244"
        urgent-color "#f38ba8"
    }
    shadow {
        off
        softness 30
        spread 5
        offset x=0 y=5
        color "#0007"
    }
    tab-indicator {
        // hide-when-single-tab
        place-within-column
        gap 4
        width 4
        length total-proportion=1.0
        position "left"
        gaps-between-tabs 5
        active-color "#b4befe"
        inactive-color "#45475a"
        urgent-color "#f38ba8"
    }
    struts {
        left 2
        right 2
        top 2
        bottom 2
    }
}

output "eDP-1" {
    // off
    scale 2
    position x=5360 y=500
    // position x=3440 y=1439          // ensure monitor has left/right relationship
    // you can do this since next release
    layout {
        default-column-width { proportion 1.0; }
        preset-column-widths {
            proportion 0.5
            proportion 1.0
        }
    }
}

output "HDMI-A-1" {
    scale 1
    position x=0 y=0
    layout {
        default-column-width { proportion 0.5; }
        preset-column-widths {
            proportion 0.34
            proportion 0.5
            proportion 1.0
        }
    }
}

output "DP-2" {
    scale 1
    position x=3440 y=180
    focus-at-startup
    layout {
        default-column-width { proportion 1.0; }
        preset-column-widths {
            proportion 0.5
            proportion 1.0
        }
    }
}

environment {
    // GTK_IM_MODULE "fcitx"
    // QT_QPA_PLATFORM "wayland"
    // ELECTRON_OZONE_PLATFORM_HINT "auto"
}

recent-windows {
    // off
    debounce-ms 750

    open-delay-ms 150

    highlight {
        active-color "#585b70ff"
        urgent-color "#f38ba8ff"
        padding 30
        corner-radius 0
    }

    previews {
        max-height 480
        max-scale 0.5
    }

    binds {
        // Alt+Tab         { next-window; }
        // Alt+Shift+Tab   { previous-window; }
        // Alt+grave       { next-window     filter="app-id"; }
        // Alt+Shift+grave { previous-window filter="app-id"; }
        //
        Mod+Tab         { next-window; }
        Mod+Shift+Tab   { previous-window; }
        Mod+grave       { next-window     filter="app-id"; }
        Mod+Shift+grave { previous-window filter="app-id"; }
    }
}

overview {
    backdrop-color "#0e1117"
}

