hotkey-overlay {
    skip-at-startup
}

prefer-no-csd

screenshot-path null

cursor {
    xcursor-theme "catppuccin-mocha-dark-cursors"
    xcursor-size 24
    hide-after-inactive-ms 5000
}

clipboard {
    disable-primary
}

window-rule {
    match app-id="feh"
    match app-id="vivaldi-stable"
    match app-id="org.qutebrowser.qutebrowser"
    open-fullscreen false
}

window-rule {
    match app-id="feh" title=".*\/tmp.*"
    // match app-id="wechat" title=".*Photos.*"
    // match app-id="org.telegram.desktop" title="Media viewer"
    // match app-id="QQ" title=".*聊天记录.*"
    // match app-id="QQ" title=".*图片查看器.*"
    // match app-id="QQ" title=".*视频播放器.*"
    match app-id=".*jetbrains.*" title=".*Welcome.*"
    match app-id="com.gabm.satty"
    open-floating true
    open-fullscreen false
}

// wechat bug for some floating windows
window-rule {
    match app-id="wechat" title="wechat"
    open-focused false
}

// window-rule {
//     match app-id="org.telegram.desktop"
//     default-column-width { fixed 456; }
// }

window-rule {
    match app-id="org.telegram.desktop" title="Media viewer"
    open-floating false
    open-fullscreen false
    max-width 200
}

